{
    "manifest_version": 2,
    "name": "Linkedin Chorme Extension",
    "short_name": "Help Recurter find the right canadate ",
    "version": "1.2.0",
    "description":
        "This tool help recuter finding the best canadate for the company",
    "browser_action": {
        "default_title": "Show the list of pinned tabs",
        "default_popup": "pages/popup.html"
    },
    "author": "Lab12 Linkinedin group",
    "background": {
        "page": "pages/background.html"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["pages/index.js"],
        "run_at": "document_end",
        "exclude_matches": ["https://www.youtube.com/*"]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "storage",
        "alarms"
    ],
    "minimum_chrome_version": "60",
    "content_security_policy":
        "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}