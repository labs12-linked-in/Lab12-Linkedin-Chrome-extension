{
    "manifest_version": 2,
    "name": "Linkedin Chorme Extension",
    "short_name": "Help Recurter find the right canadate ",
    "version": "1.2.0",
    "description":
        "This tool help recuter finding the best canadate for the company",
    "browser_action": {
        "default_title": "Show the list of pinned tabs",
        "default_popup": "pages/popup.html"
    },
    "author": "Lab12 Linkinedin group",
    "background": {
        "page": "pages/background.html"
    },
    "content_scripts": [
        {
        "matches": ["https://www.linkedin.com/in/*", "https://linkedinextension.netlify.com/*"],
        "js": ["pages/index.js"]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "storage",
        "alarms"
    ],
    "web_accessible_resources": [
        "pages/popup.js",
        "pages/popup.html",
        "pages/background.html",
        "pages/background.js",
        "pages/index.js"
    ],
    "minimum_chrome_version": "60",
    "content_security_policy":
        "script-src 'self' https://www.linkedin.com; object-src 'self'"
}